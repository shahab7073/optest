{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-hero3d" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
      <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading"><h3 class="panel-title"><i class="fa fa-cube"></i> {{ text_edit }}</h3></div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-hero3d" class="form-horizontal">

          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
              {% if error_name %}<div class="text-danger">{{ error_name }}</div>{% endif %}
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                <option value="1" {% if status %}selected{% endif %}>{{ text_enabled }}</option>
                <option value="0" {% if not status %}selected{% endif %}>{{ text_disabled }}</option>
              </select>
            </div>
          </div>

          <fieldset>
            <legend>Content</legend>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-title">{{ entry_title }}</label>
              <div class="col-sm-10">
                <input type="text" name="title" value="{{ title }}" placeholder="{{ entry_title }}" id="input-title" class="form-control" />
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-subtitle">{{ entry_subtitle }}</label>
              <div class="col-sm-10">
                <textarea name="subtitle" rows="2" id="input-subtitle" class="form-control" placeholder="{{ entry_subtitle }}">{{ subtitle }}</textarea>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-cta-text">{{ entry_cta_text }}</label>
              <div class="col-sm-4">
                <input type="text" name="cta_text" value="{{ cta_text }}" placeholder="{{ entry_cta_text }}" id="input-cta-text" class="form-control" />
              </div>
              <label class="col-sm-2 control-label" for="input-cta-link">{{ entry_cta_link }}</label>
              <div class="col-sm-4">
                <input type="text" name="cta_link" value="{{ cta_link }}" placeholder="index.php?route=product/category&path=20" id="input-cta-link" class="form-control" />
              </div>
            </div>
          </fieldset>

          <fieldset>
            <legend>3D Settings</legend>

            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-model-url">{{ entry_model_url }}</label>
              <div class="col-sm-10">
                <input type="text" name="model_url" value="{{ model_url }}" placeholder="image/3d/hero.glb" id="input-model-url" class="form-control" />
                {% if error_model_url %}<div class="text-danger">{{ error_model_url }}</div>{% endif %}
                <p class="help-block">{{ help_model_url }}</p>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-alpha">{{ entry_alpha }}</label>
              <div class="col-sm-4">
                <select name="alpha" id="input-alpha" class="form-control">
                  <option value="0" {% if not alpha %}selected{% endif %}>Off</option>
                  <option value="1" {% if alpha %}selected{% endif %}>On</option>
                </select>
                <p class="help-block">{{ help_alpha }}</p>
              </div>

              <label class="col-sm-2 control-label" for="input-bg-color">{{ entry_bg_color }}</label>
              <div class="col-sm-4">
                <input type="color" name="bg_color" value="{{ bg_color }}" id="input-bg-color" class="form-control" />
                <p class="help-block">{{ help_bg_color }}</p>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-auto-rotate">{{ entry_auto_rotate }}</label>
              <div class="col-sm-4">
                <select name="auto_rotate" id="input-auto-rotate" class="form-control">
                  <option value="1" {% if auto_rotate %}selected{% endif %}>On</option>
                  <option value="0" {% if not auto_rotate %}selected{% endif %}>Off</option>
                </select>
                <p class="help-block">{{ help_auto_rotate }}</p>
              </div>

              <label class="col-sm-2 control-label" for="input-height">{{ entry_height }}</label>
              <div class="col-sm-4">
                <input type="number" min="320" step="10" name="height" value="{{ height }}" id="input-height" class="form-control" />
                <p class="help-block">{{ help_height }}</p>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-aspect">{{ entry_aspect }}</label>
              <div class="col-sm-4">
                <input type="text" name="aspect" value="{{ aspect }}" id="input-aspect" class="form-control" />
                <p class="help-block">{{ help_aspect }}</p>
              </div>
            </div>
          </fieldset>

        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
